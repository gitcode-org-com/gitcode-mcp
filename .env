# GitCode MCP服务器配置

# GitCode API配置
GITCODE_TOKEN=your_gitcode_token_here
GITCODE_API_URL=https://api.gitcode.com/api/v5

# MCP传输配置 (stdio或sse)
MCP_TRANSPORT=stdio
MCP_SSE_PORT=8000

# 服务器配置
MCP_SERVER_PORT=8080
MCP_SERVER_HOST=0.0.0.0
MCP_LOG_PATH=gitcode_mcp.log

# API配置
API_TIMEOUT=30

# 缓存配置
ENABLE_CACHE=true
CACHE_TTL=300 